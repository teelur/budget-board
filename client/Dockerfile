FROM node:lts-alpine as build-stage

ARG VITE_API_URL
ARG VITE_API_URL ${VITE_API_URL}

ARG VITE_FIREBASE_API_KEY
ARG VITE_FIREBASE_API_KEY ${VITE_FIREBASE_API_KEY}

ARG VITE_FIREBASE_AUTH_DOMAIN
ARG VITE_FIREBASE_AUTH_DOMAIN ${VITE_FIREBASE_AUTH_DOMAIN}

ARG VITE_FIREBASE_PROJECT_ID
ARG VITE_FIREBASE_PROJECT_ID ${VITE_FIREBASE_PROJECT_ID}

ARG VITE_FIREBASE_STORAGE_BUCKET
ARG VITE_FIREBASE_STORAGE_BUCKET ${VITE_FIREBASE_STORAGE_BUCKET}

ARG VITE_FIREBASE_MESSAGING_SENDER_ID
ARG VITE_FIREBASE_MESSAGING_SENDER_ID ${VITE_FIREBASE_MESSAGING_SENDER_ID}

ARG VITE_FIREBASE_APP_ID
ARG VITE_FIREBASE_APP_ID ${VITE_FIREBASE_APP_ID}

ARG VITE_FIREBASE_MEASUREMENT_ID
ARG VITE_FIREBASE_MEASUREMENT_ID ${VITE_FIREBASE_MEASUREMENT_ID}

ENV NODE_ENV=development
WORKDIR /app
COPY ["./client/package.json", "./client/yarn.lock", "./"]
RUN yarn install

COPY ./client/ .
RUN yarn run build

# production stage
FROM nginx:stable-alpine as production-stage

COPY --from=build-stage /app/dist /usr/share/nginx/html
COPY --from=build-stage /app/nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]